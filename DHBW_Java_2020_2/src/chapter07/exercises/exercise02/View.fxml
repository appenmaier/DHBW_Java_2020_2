<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" vgap="5.0"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="chapter07.exercises.exercise02.Controller">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
			prefWidth="100.0" />
		<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
			prefWidth="100.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<Label text="Anfangskapital" />
		<Label text="Zinssatz" GridPane.rowIndex="1" />
		<Label text="Laufzeit" GridPane.rowIndex="2" />
		<Label text="Zinsen" GridPane.rowIndex="3" />
		<Button mnemonicParsing="false" onAction="#calculateInterest"
			text="Zinsen berechnen" GridPane.columnSpan="2"
			GridPane.halignment="CENTER" GridPane.rowIndex="4" />
		<TextField fx:id="interestRateTextField"
			GridPane.columnIndex="1" GridPane.rowIndex="1" />
		<TextField fx:id="runningTimeTextField"
			GridPane.columnIndex="1" GridPane.rowIndex="2" />
		<TextField fx:id="initialCapitalTextField"
			GridPane.columnIndex="1" />
		<Label fx:id="interestLabel" GridPane.columnIndex="1"
			GridPane.rowIndex="3" />
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</GridPane>
