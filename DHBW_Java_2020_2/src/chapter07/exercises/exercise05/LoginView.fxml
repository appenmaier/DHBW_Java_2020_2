<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" vgap="5.0"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="chapter07.exercises.exercise05.LoginController">
	<children>
		<Label text="Name" GridPane.columnIndex="0"
			GridPane.rowIndex="0" />
		<TextField fx:id="userNameTextField"
			GridPane.columnIndex="1" GridPane.rowIndex="0" />
		<Label text="Passwort" GridPane.columnIndex="0"
			GridPane.rowIndex="1" />
		<PasswordField fx:id="passwordPasswordField"
			accessibleRole="PASSWORD_FIELD" GridPane.columnIndex="1"
			GridPane.rowIndex="1" />
		<Button onAction="#login" text="Anmelden"
			GridPane.Halignment="CENTER" GridPane.columnIndex="0"
			GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.rowSpan="1" />
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</GridPane>
