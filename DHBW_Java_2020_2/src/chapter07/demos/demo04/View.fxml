<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/16"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="chapter07.demos.demo04.Controller">
	<top>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
			style="-fx-background-color: 'blue';" BorderPane.alignment="CENTER">
			<children>
				<Label text="Top" />
			</children>
		</HBox>
	</top>
	<bottom>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="474.0"
			style="-fx-background-color: 'green';" BorderPane.alignment="CENTER">
			<children>
				<ImageView fx:id="javaFxImageView" fitHeight="150.0"
					fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
			</children>
		</HBox>
	</bottom>
	<left>
		<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
			style="-fx-background-color: 'red';" BorderPane.alignment="CENTER">
			<children>
				<Label text="Left" />
			</children>
		</VBox>
	</left>
	<right>
		<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
			style="-fx-background-color: 'yellow';" BorderPane.alignment="CENTER">
			<children>
				<Label text="Right" />
			</children>
		</VBox>
	</right>
	<center>
		<GridPane alignment="CENTER"
			style="-fx-background-color: 'white';" BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Label" />
				<Label text="Label" GridPane.rowIndex="1" />
				<Label text="Label" GridPane.rowIndex="2" />
				<TextField GridPane.columnIndex="1" />
				<TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />
			</children>
		</GridPane>
	</center>
</BorderPane>
